<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.pwcong.jpstart">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".App"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:configChanges="locale"
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".component.activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"  />
            </intent-filter>
        </activity>

        <activity android:configChanges="locale" android:name=".component.activity.MainActivity" android:label="@string/jp_start"/>

        <activity android:configChanges="locale" android:name=".component.activity.PhotoViewActivity" android:theme="@style/AppTheme.Transparent"/>

        <activity android:configChanges="locale" android:name=".component.activity.SettingActivity" android:label="@string/setting"/>

        <activity android:configChanges="locale" android:name=".component.activity.AboutActivity" android:label="@string/about"/>



    </application>

</manifest>